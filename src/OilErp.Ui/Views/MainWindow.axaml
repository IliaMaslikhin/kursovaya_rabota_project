<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OilErp.Ui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="1280"
        d:DesignHeight="720"
        x:Class="OilErp.Ui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*"
          RowSpacing="10"
          Margin="12">
        <Border Padding="10"
                CornerRadius="10"
                Background="{DynamicResource Brush.PanelBackground}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="1">
            <Grid ColumnDefinitions="Auto,*,Auto"
                  ColumnSpacing="12"
                  VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                            Spacing="10">
                    <Ellipse Width="10"
                             Height="10"
                             Fill="{DynamicResource Brush.Accent}"
                             VerticalAlignment="Center"/>
                    <StackPanel Spacing="2">
                        <TextBlock Text="{Binding Title}"
                                   FontSize="17"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ConnectionDisplay}"
                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Text="{Binding Status}"
                           Foreground="{DynamicResource Brush.TextSecondary}"
                           TextWrapping="Wrap"/>

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="6"
                            HorizontalAlignment="Right">
                    <Button Content="Генерация случайных данных"
                            Classes="success"
                            Command="{Binding GenerateRandomDataCommand}"/>
                    <Button Content="Очистить базу"
                            Classes="danger"
                            Command="{Binding ClearDatabaseCommand}"/>
                    <Button Content="Сменить базу"
                            Command="{Binding ChangeConnectionCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Central -->
        <TabControl Grid.Row="1"
                    Margin="0,4,0,0"
                    IsVisible="{Binding IsCentralProfile}">
            <TabItem Header="Оборудование">
                <ContentControl Content="{Binding EquipmentCentral}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate x:DataType="vm:CentralEquipmentTabViewModel">
                            <Grid RowDefinitions="Auto,Auto,*"
                                  RowSpacing="10"
                                  Margin="8">
                                <WrapPanel>
                                    <WrapPanel.Styles>
                                        <Style Selector="WrapPanel > :is(Control)">
                                            <Setter Property="Margin" Value="0,0,8,8"/>
                                        </Style>
                                    </WrapPanel.Styles>
                                    <Button Content="Обновить"
                                            Command="{Binding RefreshCommand}"/>
                                    <Button Content="Добавить"
                                            Classes="primary"
                                            Command="{Binding AddCommand}"/>
                                    <TextBox Width="220"
                                             Watermark="Поиск (код/название/тип/завод)"
                                             Text="{Binding FilterText}">
                                        <TextBox.KeyBindings>
                                            <KeyBinding Gesture="Enter"
                                                        Command="{Binding RefreshCommand}"/>
                                        </TextBox.KeyBindings>
                                    </TextBox>
                                    <ComboBox Width="180"
                                              ToolTip.Tip="Сортировка оборудования"
                                              ItemsSource="{Binding EquipmentSortOptions}"
                                              SelectedItem="{Binding SelectedEquipmentSort}"/>
                                    <ComboBox Width="240"
                                              ToolTip.Tip="Группировка списка"
                                              ItemsSource="{Binding EquipmentGroupOptions}"
                                              SelectedItem="{Binding SelectedEquipmentGroup}"/>
                                    <Button Content="Сброс"
                                            Command="{Binding ClearFilterCommand}"/>
                                    <Button Content="Изменить"
                                            Command="{Binding EditCommand}"/>
                                    <Button Content="Удалить"
                                            Command="{Binding DeleteCommand}"/>
                                    <ProgressBar IsIndeterminate="True"
                                                 IsVisible="{Binding IsBusy}"
                                                 Width="90"
                                                 Height="4"
                                                 VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding StatusMessage}"
                                               Foreground="{DynamicResource Brush.TextSecondary}"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </WrapPanel>

                                <Border Grid.Row="1"
                                        Padding="10"
                                        Background="{DynamicResource Brush.PanelBackground}"
                                        BorderBrush="{DynamicResource Brush.Border}"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                    <Grid ColumnDefinitions="160,*,160,120">
                                        <Border BorderBrush="{DynamicResource Brush.Border}"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,2">
                                            <TextBlock Text="Код"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                        <Border Grid.Column="1"
                                                BorderBrush="{DynamicResource Brush.Border}"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,2">
                                            <TextBlock Text="Название"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                        <Border Grid.Column="2"
                                                BorderBrush="{DynamicResource Brush.Border}"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,2">
                                            <TextBlock Text="Тип"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                        <Border Grid.Column="3"
                                                Padding="6,2">
                                            <TextBlock Text="Источник"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <ListBox Grid.Row="2"
                                         ItemsSource="{Binding DisplayItems}"
                                         SelectedItem="{Binding SelectedDisplayItem}"
                                         BorderBrush="{DynamicResource Brush.Border}"
                                         BorderThickness="1"
                                         Background="{DynamicResource Brush.PanelBackground}">
                                    <ListBox.Styles>
                                        <Style Selector="ListBoxItem">
                                            <Setter Property="Background" Value="{DynamicResource Brush.CardBackground}"/>
                                        </Style>
                                        <Style Selector="ListBoxItem:pointerover">
                                            <Setter Property="Background" Value="{DynamicResource Brush.PanelBackground}"/>
                                        </Style>
                                        <Style Selector="ListBoxItem:selected">
                                            <Setter Property="Background" Value="{DynamicResource Brush.AccentMuted}"/>
                                        </Style>
                                    </ListBox.Styles>
                                    <ListBox.DataTemplates>
                                        <DataTemplate x:DataType="vm:EquipmentGroupHeaderViewModel">
                                            <Border Padding="10,8"
                                                    Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Background}"
                                                    BorderBrush="{DynamicResource Brush.Border}"
                                                    BorderThickness="0,0,0,1">
                                                <TextBlock Text="{Binding DisplayTitle}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource Brush.TextPrimary}"
                                                           TextWrapping="NoWrap"/>
                                            </Border>
                                        </DataTemplate>
                                        <DataTemplate x:DataType="vm:EquipmentItemViewModel">
                                            <Border Padding="10"
                                                    Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Background}"
                                                    BorderBrush="{DynamicResource Brush.Border}"
                                                    BorderThickness="0,0,0,1">
                                                <Grid ColumnDefinitions="160,*,160,120">
                                                    <Border BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding Code}"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource Brush.TextPrimary}"/>
                                                    </Border>
                                                    <Border Grid.Column="1"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding Name}"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                                   TextWrapping="NoWrap"/>
                                                    </Border>
                                                    <Border Grid.Column="2"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding Type}"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                                   TextWrapping="NoWrap"/>
                                                    </Border>
                                                    <Border Grid.Column="3"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding PlantCodeDisplay}"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                                   TextWrapping="NoWrap"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.DataTemplates>
                                </ListBox>
                            </Grid>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </TabItem>

            <TabItem Header="Замеры">
                <ContentControl Content="{Binding MeasurementsCentral}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate x:DataType="vm:CentralMeasurementsTabViewModel">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto">
                                <StackPanel Spacing="10"
                                            Margin="8">
                                    <WrapPanel>
                                        <WrapPanel.Styles>
                                            <Style Selector="WrapPanel > :is(Control)">
                                                <Setter Property="Margin" Value="0,0,8,8"/>
                                            </Style>
                                        </WrapPanel.Styles>
                                        <TextBlock Text="ЦЕНТРАЛЬНАЯ"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                                   VerticalAlignment="Center"/>
                                        <Button Content="Обновить"
                                                Command="{Binding RefreshCommand}"/>
                                        <TextBox Width="220"
                                                 Watermark="Поиск (код/название/тип/завод)"
                                                 Text="{Binding FilterText}">
                                            <TextBox.KeyBindings>
                                                <KeyBinding Gesture="Enter"
                                                            Command="{Binding RefreshCommand}"/>
                                            </TextBox.KeyBindings>
                                        </TextBox>
                                        <ComboBox Width="180"
                                                  ToolTip.Tip="Сортировка оборудования"
                                                  ItemsSource="{Binding EquipmentSortOptions}"
                                                  SelectedItem="{Binding SelectedEquipmentSort}"/>
                                        <ComboBox Width="240"
                                                  ToolTip.Tip="Группировка списка"
                                                  ItemsSource="{Binding EquipmentGroupOptions}"
                                                  SelectedItem="{Binding SelectedEquipmentGroup}"/>
                                        <ComboBox Width="220"
                                                  ToolTip.Tip="Порядок дат"
                                                  ItemsSource="{Binding ColumnSortOptions}"
                                                  SelectedItem="{Binding SelectedColumnSort}"/>
                                        <Button Content="Сброс"
                                                Command="{Binding ClearFilterCommand}"/>
                                        <Button Content="Добавить замер"
                                                Classes="primary"
                                                ToolTip.Tip="Выберите оборудование и добавьте замер (central)"
                                                Command="{Binding AddMeasurementCommand}"/>
                                        <Button Content="Импорт/Экспорт"
                                                ToolTip.Tip="Экспорт/импорт замеров по всем заводам (центральная БД)"
                                                Command="{Binding OpenTransferCommand}"/>
                                        <ProgressBar IsIndeterminate="True"
                                                     IsVisible="{Binding IsBusy}"
                                                     Width="90"
                                                     Height="4"
                                                     VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding StatusMessage}"
                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </WrapPanel>

                                    <Border Padding="10"
                                            Background="{DynamicResource Brush.PanelBackground}"
                                            BorderBrush="{DynamicResource Brush.Border}"
                                            BorderThickness="1"
                                            CornerRadius="8">
                                        <Grid ColumnDefinitions="Auto,*"
                                              RowDefinitions="Auto,Auto">
                                            <Grid Grid.Row="0"
                                                  Grid.RowSpan="2">
                                                <Grid ColumnDefinitions="160,240,160,120">
                                                    <Border BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,0">
                                                        <TextBlock Text="Код"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                    </Border>
                                                    <Border Grid.Column="1"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,0">
                                                        <TextBlock Text="Название"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                    </Border>
                                                    <Border Grid.Column="2"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,0">
                                                        <TextBlock Text="Тип"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                    </Border>
                                                    <Border Grid.Column="3"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,0">
                                                        <TextBlock Text="Завод"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                    </Border>
                                                </Grid>
                                            </Grid>

                                            <ItemsControl Grid.Row="0"
                                                          Grid.Column="1"
                                                          ItemsSource="{Binding ColumnGroups}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:MeasurementDateGroupHeaderViewModel">
                                                        <Border Width="{Binding Width}"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding Title}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       TextWrapping="NoWrap"
                                                                       TextAlignment="Center"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <ItemsControl Grid.Row="1"
                                                          Grid.Column="1"
                                                          ItemsSource="{Binding Columns}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:CentralMeasurementColumnViewModel">
                                                        <Border Width="120"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding Header}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       TextWrapping="NoWrap"
                                                                       TextAlignment="Center"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </Border>

                                    <ListBox ItemsSource="{Binding DisplayRows}"
                                             SelectedItem="{Binding SelectedDisplayRow}"
                                             BorderBrush="{DynamicResource Brush.Border}"
                                             BorderThickness="1"
                                             Background="{DynamicResource Brush.PanelBackground}">
                                        <ListBox.Styles>
                                            <Style Selector="ListBoxItem">
                                                <Setter Property="Background" Value="{DynamicResource Brush.CardBackground}"/>
                                            </Style>
                                            <Style Selector="ListBoxItem:pointerover">
                                                <Setter Property="Background" Value="{DynamicResource Brush.PanelBackground}"/>
                                            </Style>
                                            <Style Selector="ListBoxItem:selected">
                                                <Setter Property="Background" Value="{DynamicResource Brush.AccentMuted}"/>
                                            </Style>
                                        </ListBox.Styles>
                                        <ListBox.DataTemplates>
                                            <DataTemplate x:DataType="vm:CentralMeasurementsGroupHeaderViewModel">
                                                <Border Padding="10,8"
                                                        Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Background}"
                                                        BorderBrush="{DynamicResource Brush.Border}"
                                                        BorderThickness="0,0,0,1">
                                                    <TextBlock Text="{Binding DisplayTitle}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource Brush.TextPrimary}"
                                                               TextWrapping="NoWrap"/>
                                                </Border>
                                            </DataTemplate>
                                            <DataTemplate x:DataType="vm:CentralMeasurementEquipmentRowViewModel">
                                                <Border Padding="10"
                                                        Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Background}"
                                                        BorderBrush="{DynamicResource Brush.Border}"
                                                        BorderThickness="0,0,0,1">
                                                    <StackPanel Orientation="Horizontal"
                                                                Spacing="0">
                                                        <Border Width="160"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding Code}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource Brush.TextPrimary}"
                                                                       TextWrapping="NoWrap"/>
                                                        </Border>
                                                        <Border Width="240"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding Name}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       TextWrapping="NoWrap"/>
                                                        </Border>
                                                        <Border Width="160"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding Type}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       TextWrapping="NoWrap"/>
                                                        </Border>
                                                        <Border Width="120"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding PlantCodeDisplay}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       TextWrapping="NoWrap"/>
                                                        </Border>

                                                        <ItemsControl ItemsSource="{Binding Cells}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel Orientation="Horizontal"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border Width="120"
                                                                            Padding="6,0"
                                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                                            BorderThickness="0,0,1,0">
                                                                        <TextBlock Text="{Binding .}"
                                                                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                                                                   TextWrapping="NoWrap"/>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.DataTemplates>
                                    </ListBox>
                                </StackPanel>
                            </ScrollViewer>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </TabItem>

            <TabItem Header="Аналитика">
                <ContentControl Content="{Binding Analytics}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate x:DataType="vm:AnalyticsPanelViewModel">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Spacing="12"
                                            Margin="8">
                                    <WrapPanel>
                                        <WrapPanel.Styles>
                                            <Style Selector="WrapPanel > :is(Control)">
                                                <Setter Property="Margin" Value="0,0,8,8"/>
                                            </Style>
                                        </WrapPanel.Styles>
                                        <Button Content="Обновить"
                                                Command="{Binding RefreshCommand}"/>
                                        <TextBlock Text="Политика для всех заводов:"
                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                   VerticalAlignment="Center"/>
                                        <ComboBox Width="220"
                                                  ItemsSource="{Binding PolicyNames}"
                                                  SelectedItem="{Binding SelectedPolicyForAll}"/>
                                        <Button Content="Применить ко всем"
                                                Command="{Binding ApplyPolicyToAllCommand}"/>
                                        <ProgressBar IsIndeterminate="True"
                                                     IsVisible="{Binding IsBusy}"
                                                     Width="90"
                                                     Height="4"
                                                     VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding StatusMessage}"
                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </WrapPanel>

                                    <ItemsControl ItemsSource="{Binding PlantGroups}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:AnalyticsPlantGroupViewModel">
                                                <Border Padding="10"
                                                        Margin="0 0 0 10"
                                                        CornerRadius="8"
                                                        Background="{DynamicResource Brush.PanelBackground}"
                                                        BorderBrush="{DynamicResource Brush.Border}"
                                                        BorderThickness="1">
                                                    <StackPanel Spacing="10">
                                                        <WrapPanel>
                                                            <WrapPanel.Styles>
                                                                <Style Selector="WrapPanel > :is(Control)">
                                                                    <Setter Property="Margin" Value="0,0,8,8"/>
                                                                </Style>
                                                            </WrapPanel.Styles>
                                                            <TextBlock Text="{Binding Title}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource Brush.TextPrimary}"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding SummaryText}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Text="Политика:"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       VerticalAlignment="Center"/>
                                                            <ComboBox Width="220"
                                                                      ItemsSource="{Binding PolicyNames}"
                                                                      SelectedItem="{Binding SelectedPolicyName}"/>
                                                            <Button Content="Применить"
                                                                    Command="{Binding ApplyPolicyCommand}"/>
                                                            <Button Content="Обновить"
                                                                    Command="{Binding RefreshCommand}"/>
                                                            <ProgressBar IsIndeterminate="True"
                                                                         IsVisible="{Binding IsBusy}"
                                                                         Width="90"
                                                                         Height="4"
                                                                         VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding StatusMessage}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       VerticalAlignment="Center"
                                                                       TextWrapping="Wrap"/>
                                                        </WrapPanel>

                                                        <Border Background="{DynamicResource Brush.CardBackground}"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="1"
                                                                CornerRadius="6">
                                                            <StackPanel>
                                                                <Border Padding="10,8"
                                                                        Background="{DynamicResource Brush.PanelBackground}">
                                                                    <Grid ColumnDefinitions="2*,Auto,Auto,Auto"
                                                                          ColumnSpacing="12">
                                                                        <TextBlock Text="Актив"
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                                        <TextBlock Grid.Column="1"
                                                                                   Text="СК"
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                                        <TextBlock Grid.Column="2"
                                                                                   Text="Риск"
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                                        <TextBlock Grid.Column="3"
                                                                                   Text="Обновлено"
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                                    </Grid>
                                                                </Border>

                                                                <ItemsControl ItemsSource="{Binding Items}">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate x:DataType="vm:AnalyticsRowViewModel">
                                                                            <Border BorderBrush="{DynamicResource Brush.Border}"
                                                                                    BorderThickness="0,0,0,1"
                                                                                    Padding="10,8">
                                                                                <Grid ColumnDefinitions="2*,Auto,Auto,Auto"
                                                                                      ColumnSpacing="12">
                                                                                    <TextBlock Text="{Binding AssetCode}"
                                                                                               Foreground="{DynamicResource Brush.TextPrimary}"
                                                                                               TextWrapping="NoWrap"/>
                                                                                    <TextBlock Grid.Column="1"
                                                                                               Text="{Binding CrDisplay}"
                                                                                               Foreground="{DynamicResource Brush.TextPrimary}"
                                                                                               TextWrapping="NoWrap"/>
                                                                                    <TextBlock Grid.Column="2"
                                                                                               Text="{Binding Risk}"
                                                                                               Foreground="{DynamicResource Brush.TextPrimary}"
                                                                                               TextWrapping="NoWrap"/>
                                                                                    <TextBlock Grid.Column="3"
                                                                                               Text="{Binding UpdatedAt}"
                                                                                               Foreground="{DynamicResource Brush.TextSecondary}"
                                                                                               TextWrapping="NoWrap"/>
                                                                                </Grid>
                                                                            </Border>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </Border>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </TabItem>

            <TabItem Header="Политики рисков">
                <ContentControl Content="{Binding PoliciesCentral}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate x:DataType="vm:CentralPoliciesTabViewModel">
                            <Grid RowDefinitions="Auto,Auto,*"
                                  RowSpacing="10"
                                  Margin="8">
                                <WrapPanel>
                                    <WrapPanel.Styles>
                                        <Style Selector="WrapPanel > :is(Control)">
                                            <Setter Property="Margin" Value="0,0,8,8"/>
                                        </Style>
                                    </WrapPanel.Styles>
                                    <Button Content="Обновить"
                                            Command="{Binding RefreshCommand}"/>
                                    <Button Content="Добавить"
                                            Classes="primary"
                                            Command="{Binding AddCommand}"/>
                                    <TextBox Width="220"
                                             Watermark="Поиск (код/название/тип/завод)"
                                             Text="{Binding FilterText}">
                                        <TextBox.KeyBindings>
                                            <KeyBinding Gesture="Enter"
                                                        Command="{Binding RefreshCommand}"/>
                                        </TextBox.KeyBindings>
                                    </TextBox>
                                    <Button Content="Сброс"
                                            Command="{Binding ClearFilterCommand}"/>
                                    <Button Content="Изменить"
                                            Command="{Binding EditCommand}"/>
                                    <Button Content="Удалить"
                                            Command="{Binding DeleteCommand}"/>
                                    <ProgressBar IsIndeterminate="True"
                                                 IsVisible="{Binding IsBusy}"
                                                 Width="90"
                                                 Height="4"
                                                 VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding StatusMessage}"
                                               Foreground="{DynamicResource Brush.TextSecondary}"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </WrapPanel>

                                <Border Grid.Row="1"
                                        Padding="10"
                                        Background="{DynamicResource Brush.PanelBackground}"
                                        BorderBrush="{DynamicResource Brush.Border}"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                    <Grid ColumnDefinitions="220,*,*,*">
                                        <Border BorderBrush="{DynamicResource Brush.Border}"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,2">
                                            <TextBlock Text="Имя"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                        <Border Grid.Column="1"
                                                BorderBrush="{DynamicResource Brush.Border}"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,2">
                                            <TextBlock Text="Низкий"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                        <Border Grid.Column="2"
                                                BorderBrush="{DynamicResource Brush.Border}"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,2">
                                            <TextBlock Text="Средний"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                        <Border Grid.Column="3"
                                                Padding="6,2">
                                            <TextBlock Text="Высокий"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <ListBox Grid.Row="2"
                                         ItemsSource="{Binding Items}"
                                         SelectedItem="{Binding SelectedItem}"
                                         BorderBrush="{DynamicResource Brush.Border}"
                                         BorderThickness="1"
                                         Background="{DynamicResource Brush.PanelBackground}">
                                    <ListBox.Styles>
                                        <Style Selector="ListBoxItem">
                                            <Setter Property="Background" Value="{DynamicResource Brush.CardBackground}"/>
                                        </Style>
                                        <Style Selector="ListBoxItem:pointerover">
                                            <Setter Property="Background" Value="{DynamicResource Brush.PanelBackground}"/>
                                        </Style>
                                        <Style Selector="ListBoxItem:selected">
                                            <Setter Property="Background" Value="{DynamicResource Brush.AccentMuted}"/>
                                        </Style>
                                    </ListBox.Styles>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate x:DataType="vm:PolicyItemViewModel">
                                            <Border Padding="10"
                                                    Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Background}"
                                                    BorderBrush="{DynamicResource Brush.Border}"
                                                    BorderThickness="0,0,0,1">
                                                <Grid ColumnDefinitions="220,*,*,*">
                                                    <Border BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource Brush.TextPrimary}"/>
                                                    </Border>
                                                    <Border Grid.Column="1"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding Low}"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                                   TextWrapping="NoWrap"/>
                                                    </Border>
                                                    <Border Grid.Column="2"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding Med}"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                                   TextWrapping="NoWrap"/>
                                                    </Border>
                                                    <Border Grid.Column="3"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding High}"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                                   TextWrapping="NoWrap"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </TabItem>

            <TabItem Header="Настройки">
                <Border Margin="8"
                        Padding="18"
                        Background="{DynamicResource Brush.CardBackground}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        BorderThickness="1"
                        CornerRadius="10">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Сессия"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Title}"
                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                        <TextBlock Text="{Binding ConnectionDisplay}"
                                   Foreground="{DynamicResource Brush.TextSecondary}"/>

                        <Border Height="1"
                                Margin="0,4"
                                Background="{DynamicResource Brush.Border}"/>

                        <TextBlock Text="Тема интерфейса"
                                   FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding ThemeOptions}"
                                  SelectedItem="{Binding SelectedTheme}"
                                  Width="220"/>
                        <TextBlock Text="Тёмная — высокая контрастность; Светлая — нейтральная."
                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Plants: only Equipment + Measurements -->
        <TabControl Grid.Row="1"
                    Margin="0,4,0,0"
                    IsVisible="{Binding IsPlantProfile}">
            <TabItem Header="Оборудование">
                <ContentControl Content="{Binding EquipmentPlant}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate x:DataType="vm:PlantEquipmentTabViewModel">
                            <Grid RowDefinitions="Auto,Auto,*"
                                  RowSpacing="10"
                                  Margin="8">
                                <WrapPanel>
                                    <WrapPanel.Styles>
                                        <Style Selector="WrapPanel > :is(Control)">
                                            <Setter Property="Margin" Value="0,0,8,8"/>
                                        </Style>
                                    </WrapPanel.Styles>
                                    <Button Content="Обновить"
                                            Command="{Binding RefreshCommand}"/>
                                    <Button Content="Добавить"
                                            Classes="primary"
                                            Command="{Binding AddCommand}"/>
                                    <TextBox Width="220"
                                             Watermark="Поиск (код/локация/статус)"
                                             Text="{Binding FilterText}">
                                        <TextBox.KeyBindings>
                                            <KeyBinding Gesture="Enter"
                                                        Command="{Binding RefreshCommand}"/>
                                        </TextBox.KeyBindings>
                                    </TextBox>
                                    <ComboBox Width="180"
                                              ToolTip.Tip="Сортировка оборудования"
                                              ItemsSource="{Binding EquipmentSortOptions}"
                                              SelectedItem="{Binding SelectedEquipmentSort}"/>
                                    <ComboBox Width="240"
                                              ToolTip.Tip="Группировка списка"
                                              ItemsSource="{Binding EquipmentGroupOptions}"
                                              SelectedItem="{Binding SelectedEquipmentGroup}"/>
                                    <Button Content="Сброс"
                                            Command="{Binding ClearFilterCommand}"/>
                                    <Button Content="Изменить"
                                            Command="{Binding EditCommand}"/>
                                    <Button Content="Удалить"
                                            Command="{Binding DeleteCommand}"/>
                                    <ProgressBar IsIndeterminate="True"
                                                 IsVisible="{Binding IsBusy}"
                                                 Width="90"
                                                 Height="4"
                                                 VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding StatusMessage}"
                                               Foreground="{DynamicResource Brush.TextSecondary}"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </WrapPanel>

                                <Border Grid.Row="1"
                                        Padding="10"
                                        Background="{DynamicResource Brush.PanelBackground}"
                                        BorderBrush="{DynamicResource Brush.Border}"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                    <Grid ColumnDefinitions="160,*,140,180">
                                        <Border BorderBrush="{DynamicResource Brush.Border}"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,2">
                                            <TextBlock Text="Код"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                        <Border Grid.Column="1"
                                                BorderBrush="{DynamicResource Brush.Border}"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,2">
                                            <TextBlock Text="Локация"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                        <Border Grid.Column="2"
                                                BorderBrush="{DynamicResource Brush.Border}"
                                                BorderThickness="0,0,1,0"
                                                Padding="6,2">
                                            <TextBlock Text="Статус"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                        <Border Grid.Column="3"
                                                Padding="6,2">
                                            <TextBlock Text="Создано"
                                                       Foreground="{DynamicResource Brush.TextSecondary}"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <ListBox Grid.Row="2"
                                         ItemsSource="{Binding DisplayItems}"
                                         SelectedItem="{Binding SelectedDisplayItem}"
                                         BorderBrush="{DynamicResource Brush.Border}"
                                         BorderThickness="1"
                                         Background="{DynamicResource Brush.PanelBackground}">
                                    <ListBox.Styles>
                                        <Style Selector="ListBoxItem">
                                            <Setter Property="Background" Value="{DynamicResource Brush.CardBackground}"/>
                                        </Style>
                                        <Style Selector="ListBoxItem:pointerover">
                                            <Setter Property="Background" Value="{DynamicResource Brush.PanelBackground}"/>
                                        </Style>
                                        <Style Selector="ListBoxItem:selected">
                                            <Setter Property="Background" Value="{DynamicResource Brush.AccentMuted}"/>
                                        </Style>
                                    </ListBox.Styles>
                                    <ListBox.DataTemplates>
                                        <DataTemplate x:DataType="vm:EquipmentGroupHeaderViewModel">
                                            <Border Padding="10,8"
                                                    Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Background}"
                                                    BorderBrush="{DynamicResource Brush.Border}"
                                                    BorderThickness="0,0,0,1">
                                                <TextBlock Text="{Binding DisplayTitle}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource Brush.TextPrimary}"
                                                           TextWrapping="NoWrap"/>
                                            </Border>
                                        </DataTemplate>
                                        <DataTemplate x:DataType="vm:PlantEquipmentItemViewModel">
                                            <Border Padding="10"
                                                    Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Background}"
                                                    BorderBrush="{DynamicResource Brush.Border}"
                                                    BorderThickness="0,0,0,1">
                                                <Grid ColumnDefinitions="160,*,140,180">
                                                    <Border BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding Code}"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource Brush.TextPrimary}"/>
                                                    </Border>
                                                    <Border Grid.Column="1"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding Location}"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                                   TextWrapping="NoWrap"/>
                                                    </Border>
                                                    <Border Grid.Column="2"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding Status}"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                                   TextWrapping="NoWrap"/>
                                                    </Border>
                                                    <Border Grid.Column="3"
                                                            Padding="6,2">
                                                        <TextBlock Text="{Binding CreatedAt}"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                                   TextWrapping="NoWrap"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.DataTemplates>
                                </ListBox>
                            </Grid>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </TabItem>

            <TabItem Header="Замеры">
                <ContentControl Content="{Binding MeasurementsPlant}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate x:DataType="vm:PlantMeasurementsTabViewModel">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto">
                                <StackPanel Spacing="10"
                                            Margin="8">
                                    <WrapPanel>
                                        <WrapPanel.Styles>
                                            <Style Selector="WrapPanel > :is(Control)">
                                                <Setter Property="Margin" Value="0,0,8,8"/>
                                            </Style>
                                        </WrapPanel.Styles>
                                        <TextBlock Text="{Binding PlantCodeDisplay}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                                   VerticalAlignment="Center"/>
                                        <Button Content="Обновить"
                                                ToolTip.Tip="Обновить таблицу (учитывает фильтр)"
                                                Command="{Binding RefreshCommand}"/>
                                        <TextBox Width="220"
                                                 Watermark="Поиск (код/локация/статус)"
                                                 Text="{Binding FilterText}">
                                            <TextBox.KeyBindings>
                                                <KeyBinding Gesture="Enter"
                                                            Command="{Binding RefreshCommand}"/>
                                            </TextBox.KeyBindings>
                                        </TextBox>
                                        <ComboBox Width="180"
                                                  ToolTip.Tip="Сортировка оборудования"
                                                  ItemsSource="{Binding EquipmentSortOptions}"
                                                  SelectedItem="{Binding SelectedEquipmentSort}"/>
                                        <ComboBox Width="240"
                                                  ToolTip.Tip="Группировка списка"
                                                  ItemsSource="{Binding EquipmentGroupOptions}"
                                                  SelectedItem="{Binding SelectedEquipmentGroup}"/>
                                        <ComboBox Width="220"
                                                  ToolTip.Tip="Порядок дат"
                                                  ItemsSource="{Binding ColumnSortOptions}"
                                                  SelectedItem="{Binding SelectedColumnSort}"/>
                                        <Button Content="Сброс"
                                                Command="{Binding ClearFilterCommand}"/>
                                        <Button Content="Добавить замер"
                                                Classes="primary"
                                                ToolTip.Tip="Выберите оборудование и добавьте замер"
                                                Command="{Binding AddMeasurementCommand}"/>
                                        <Button Content="Импорт/Экспорт"
                                                ToolTip.Tip="Экспорт/импорт замеров по заводу"
                                                Command="{Binding OpenTransferCommand}"/>
                                        <Button Content="Изменить замер"
                                                ToolTip.Tip="Изменить последний замер выбранного оборудования"
                                                Command="{Binding EditLastMeasurementCommand}"/>
                                        <Button Content="Удалить замер"
                                                ToolTip.Tip="Удалить последний замер выбранного оборудования"
                                                Command="{Binding DeleteLastMeasurementCommand}"/>
                                        <ProgressBar IsIndeterminate="True"
                                                     IsVisible="{Binding IsBusy}"
                                                     Width="90"
                                                     Height="4"
                                                     VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding StatusMessage}"
                                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                                   VerticalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </WrapPanel>

                                    <Border Padding="10"
                                            Background="{DynamicResource Brush.PanelBackground}"
                                            BorderBrush="{DynamicResource Brush.Border}"
                                            BorderThickness="1"
                                            CornerRadius="8">
                                        <Grid ColumnDefinitions="Auto,*"
                                              RowDefinitions="Auto,Auto">
                                            <Grid Grid.Row="0"
                                                  Grid.RowSpan="2">
                                                <Grid ColumnDefinitions="160,240,140">
                                                    <Border BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,0">
                                                        <TextBlock Text="Код"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                    </Border>
                                                    <Border Grid.Column="1"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,0">
                                                        <TextBlock Text="Локация"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                    </Border>
                                                    <Border Grid.Column="2"
                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                            BorderThickness="0,0,1,0"
                                                            Padding="6,0">
                                                        <TextBlock Text="Статус"
                                                                   Foreground="{DynamicResource Brush.TextSecondary}"/>
                                                    </Border>
                                                </Grid>
                                            </Grid>

                                            <ItemsControl Grid.Row="0"
                                                          Grid.Column="1"
                                                          ItemsSource="{Binding ColumnGroups}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:MeasurementDateGroupHeaderViewModel">
                                                        <Border Width="{Binding Width}"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding Title}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       TextWrapping="NoWrap"
                                                                       TextAlignment="Center"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <ItemsControl Grid.Row="1"
                                                          Grid.Column="1"
                                                          ItemsSource="{Binding Columns}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate x:DataType="vm:PlantMeasurementColumnViewModel">
                                                        <Border Width="120"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding Header}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       TextWrapping="NoWrap"
                                                                       TextAlignment="Center"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </Border>

                                    <ListBox ItemsSource="{Binding DisplayRows}"
                                             SelectedItem="{Binding SelectedDisplayRow}"
                                             BorderBrush="{DynamicResource Brush.Border}"
                                             BorderThickness="1"
                                             Background="{DynamicResource Brush.PanelBackground}">
                                        <ListBox.Styles>
                                            <Style Selector="ListBoxItem">
                                                <Setter Property="Background" Value="{DynamicResource Brush.CardBackground}"/>
                                            </Style>
                                            <Style Selector="ListBoxItem:pointerover">
                                                <Setter Property="Background" Value="{DynamicResource Brush.PanelBackground}"/>
                                            </Style>
                                            <Style Selector="ListBoxItem:selected">
                                                <Setter Property="Background" Value="{DynamicResource Brush.AccentMuted}"/>
                                            </Style>
                                        </ListBox.Styles>
                                        <ListBox.DataTemplates>
                                            <DataTemplate x:DataType="vm:PlantMeasurementsGroupHeaderViewModel">
                                                <Border Padding="10,8"
                                                        Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Background}"
                                                        BorderBrush="{DynamicResource Brush.Border}"
                                                        BorderThickness="0,0,0,1">
                                                    <TextBlock Text="{Binding DisplayTitle}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource Brush.TextPrimary}"
                                                               TextWrapping="NoWrap"/>
                                                </Border>
                                            </DataTemplate>
                                            <DataTemplate x:DataType="vm:PlantMeasurementEquipmentRowViewModel">
                                                <Border Padding="10"
                                                        Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Background}"
                                                        BorderBrush="{DynamicResource Brush.Border}"
                                                        BorderThickness="0,0,0,1">
                                                    <StackPanel Orientation="Horizontal"
                                                                Spacing="0">
                                                        <Border Width="160"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding Code}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource Brush.TextPrimary}"
                                                                       TextWrapping="NoWrap"/>
                                                        </Border>
                                                        <Border Width="240"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding Location}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       TextWrapping="NoWrap"/>
                                                        </Border>
                                                        <Border Width="140"
                                                                Padding="6,0"
                                                                BorderBrush="{DynamicResource Brush.Border}"
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="{Binding Status}"
                                                                       Foreground="{DynamicResource Brush.TextSecondary}"
                                                                       TextWrapping="NoWrap"/>
                                                        </Border>

                                                        <ItemsControl ItemsSource="{Binding Cells}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel Orientation="Horizontal"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border Width="120"
                                                                            Padding="6,0"
                                                                            BorderBrush="{DynamicResource Brush.Border}"
                                                                            BorderThickness="0,0,1,0">
                                                                        <TextBlock Text="{Binding .}"
                                                                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                                                                   TextWrapping="NoWrap"/>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.DataTemplates>
                                    </ListBox>
                                </StackPanel>
                            </ScrollViewer>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
