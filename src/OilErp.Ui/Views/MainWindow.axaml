<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OilErp.Ui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="1280"
        d:DesignHeight="720"
        x:Class="OilErp.Ui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="OilErp Central Console">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*"
          RowSpacing="12"
          Margin="20">
        <Border CornerRadius="12"
                Padding="16"
                Background="#14171f"
                BorderBrush="#2c3345"
                BorderThickness="1">
            <StackPanel Spacing="12">
                <TextBlock Text="Подключение к central"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#e6eaf5"/>
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="12"
                      DataContext="{Binding ConnectionForm}">
                    <StackPanel Spacing="6">
                        <CheckBox Content="Использовать готовую строку"
                                  IsChecked="{Binding UseCustomString}"
                                  Foreground="#e6eaf5"/>
                        <TextBox Text="{Binding ConnectionString}"
                                 Watermark="Host=...;Username=...;Password=...;Database=central"
                                 IsEnabled="{Binding UseCustomString}"/>
                        <TextBlock Text="или соберите строку ниже"
                                   Foreground="#9aa3b5"/>
                        <Grid ColumnDefinitions="*,*"
                              ColumnSpacing="8">
                            <TextBox Text="{Binding Host}" Watermark="Host"/>
                            <TextBox Grid.Column="1" Text="{Binding Database}" Watermark="Database"/>
                        </Grid>
                        <Grid ColumnDefinitions="*,*"
                              ColumnSpacing="8">
                            <TextBox Text="{Binding Username}" Watermark="Username"/>
                            <TextBox Grid.Column="1" Text="{Binding Password}" Watermark="Password"/>
                        </Grid>
                        <TextBox Text="{Binding TimeoutSec}" Watermark="Timeout, sec"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Spacing="8">
                        <Button Content="Подключиться"
                                Command="{Binding ConnectCommand}"/>
                        <TextBlock Text="{Binding StatusMessage}"
                                   Foreground="#9aa3b5"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1"
                    IsEnabled="{Binding IsConnected}"
                    Margin="0,4,0,0">
            <TabItem Header="Внесение данных">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="16"
                                Margin="8"
                                DataContext="{Binding DataEntry}">
                        <TextBlock Text="Ввод данных в central"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#e6eaf5"/>

                        <Border Padding="12" CornerRadius="10" Background="#11131a" BorderBrush="#2c3345" BorderThickness="1">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Актив" FontWeight="SemiBold" Foreground="#e6eaf5"/>
                                <TextBox Text="{Binding AssetCode}" Watermark="Код актива"/>
                                <TextBox Text="{Binding AssetName}" Watermark="Название"/>
                                <TextBox Text="{Binding AssetType}" Watermark="Тип"/>
                                <TextBox Text="{Binding AssetPlant}" Watermark="Завод (ANPZ/KRNPZ)"/>
                                <Button Content="Сохранить актив" Command="{Binding SaveAssetCommand}"/>
                                <TextBlock Text="{Binding AssetStatus}" Foreground="#9aa3b5" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border Padding="12" CornerRadius="10" Background="#11131a" BorderBrush="#2c3345" BorderThickness="1">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Политика риска" FontWeight="SemiBold" Foreground="#e6eaf5"/>
                                <TextBox Text="{Binding PolicyName}" Watermark="Имя политики"/>
                                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                                    <TextBox Text="{Binding PolicyLow}" Watermark="Low"/>
                                    <TextBox Grid.Column="1" Text="{Binding PolicyMed}" Watermark="Med"/>
                                    <TextBox Grid.Column="2" Text="{Binding PolicyHigh}" Watermark="High"/>
                                </Grid>
                                <Button Content="Сохранить политику" Command="{Binding SavePolicyCommand}"/>
                                <TextBlock Text="{Binding PolicyStatus}" Foreground="#9aa3b5" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border Padding="12" CornerRadius="10" Background="#11131a" BorderBrush="#2c3345" BorderThickness="1">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Событие из завода" FontWeight="SemiBold" Foreground="#e6eaf5"/>
                                <TextBox Text="{Binding EventType}" Watermark="Тип события"/>
                                <TextBox Text="{Binding EventPlant}" Watermark="Завод"/>
                                <TextBox Text="{Binding EventPayload}" AcceptsReturn="True" Height="100" Watermark="JSON payload"/>
                                <Button Content="Отправить событие" Command="{Binding EnqueueEventCommand}"/>
                                <TextBlock Text="{Binding EventStatus}" Foreground="#9aa3b5" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Аналитика">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="12"
                                Margin="8"
                                DataContext="{Binding Analytics}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Обновить" Command="{Binding RefreshCommand}"/>
                            <Button Content="Собрать данные" Command="{Binding IngestCommand}"/>
                            <TextBlock Text="{Binding StatusMessage}" Foreground="#9aa3b5" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding Items}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:AnalyticsRowViewModel">
                                    <Border Padding="10"
                                            Margin="0 0 0 8"
                                            CornerRadius="8"
                                            Background="#11131a"
                                            BorderBrush="#2c3345"
                                            BorderThickness="1">
                                        <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto" ColumnSpacing="12">
                                            <TextBlock Text="{Binding AssetCode}" FontWeight="SemiBold" Foreground="#e6eaf5"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Plant}" Foreground="#9aa3b5"/>
                                            <TextBlock Grid.Column="2" Text="{Binding CrDisplay}" Foreground="#e6eaf5"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Risk}" Foreground="#e6eaf5"/>
                                            <TextBlock Grid.Column="4" Text="{Binding UpdatedAt}" Foreground="#9aa3b5"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Измерения" DataContext="{Binding Measurements}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="12" Margin="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Обновить" Command="{Binding LoadCommand}"/>
                            <TextBlock Text="{Binding StatusMessage}" Foreground="#9aa3b5" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding Series}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10"
                                            Margin="0 0 0 8"
                                            CornerRadius="8"
                                            Background="#11131a"
                                            BorderBrush="#2c3345"
                                            BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="{Binding AssetCode}" FontWeight="SemiBold" Foreground="#e6eaf5"/>
                                            <TextBlock Text="{Binding SourcePlant}" Foreground="#9aa3b5"/>
                                            <ItemsControl ItemsSource="{Binding Points}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Label}" Foreground="#e6eaf5"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Padding="12" CornerRadius="10" Background="#11131a" BorderBrush="#2c3345" BorderThickness="1">
                            <StackPanel Spacing="8" DataContext="{Binding MeasurementForm}">
                                <TextBlock Text="Добавить замер" FontWeight="SemiBold" Foreground="#e6eaf5"/>
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                                    <ComboBox ItemsSource="{Binding Plants}" SelectedItem="{Binding SelectedPlant}"/>
                                    <ComboBox Grid.Column="1" ItemsSource="{Binding Assets}" SelectedItem="{Binding SelectedAsset}"/>
                                </Grid>
                                <TextBox Text="{Binding Label}" Watermark="Метка"/>
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                                    <DatePicker SelectedDate="{Binding MeasurementDate}"/>
                                    <TimePicker Grid.Column="1" SelectedTime="{Binding MeasurementTime}"/>
                                </Grid>
                                <TextBox Text="{Binding Thickness}" Watermark="Толщина"/>
                                <TextBox Text="{Binding Note}" Watermark="Комментарий"/>
                                <Button Content="Сохранить замер" Command="{Binding SubmitCommand}"/>
                                <TextBlock Text="{Binding StatusMessage}" Foreground="#9aa3b5" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Очередь" DataContext="{Binding EventQueue}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="12" Margin="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Обновить" Command="{Binding RefreshCommand}"/>
                            <Button Content="Requeue" Command="{Binding RequeueCommand}"/>
                            <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                <TextBlock Text="Лимит" Foreground="#9aa3b5"/>
                                <TextBox Width="60" Text="{Binding Limit}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                <TextBlock Text="Очистить старше, сек" Foreground="#9aa3b5"/>
                                <TextBox Width="80" Text="{Binding CleanupAgeSeconds}"/>
                                <Button Content="Cleanup" Command="{Binding CleanupCommand}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding StatusMessage}" Foreground="#9aa3b5" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>

                        <Border Padding="10" Background="#0e1119" BorderBrush="#2c3345" BorderThickness="1" CornerRadius="8">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Непроцессed события" FontWeight="SemiBold" Foreground="#e6eaf5"/>
                                <ItemsControl ItemsSource="{Binding Events}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="vm:EventQueueRowViewModel">
                                            <Border Padding="8" Margin="0 0 0 8" Background="#11131a" BorderBrush="#2c3345" BorderThickness="1" CornerRadius="6">
                                                <StackPanel Spacing="4">
                                                    <TextBlock Text="{Binding Id}" Foreground="#e6eaf5" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding EventType}" Foreground="#9aa3b5"/>
                                                    <TextBlock Text="{Binding SourcePlant}" Foreground="#9aa3b5"/>
                                                    <TextBlock Text="{Binding CreatedAt}" Foreground="#9aa3b5"/>
                                                    <TextBlock Text="{Binding Payload}" Foreground="#e6eaf5" TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" Background="#0e1119" BorderBrush="#2c3345" BorderThickness="1" CornerRadius="8">
                            <StackPanel Spacing="6">
                                <TextBlock Text="events_ingest уведомления" FontWeight="SemiBold" Foreground="#e6eaf5"/>
                                <ItemsControl ItemsSource="{Binding IngestNotifications}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Foreground="#9aa3b5"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Диагностика" DataContext="{Binding Diagnostics}">
                <StackPanel Spacing="8" Margin="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ComboBox Width="220"
                                  ItemsSource="{Binding AvailableChannels}"
                                  SelectedItem="{Binding Channel}"
                                  IsEditable="True"
                                  PlaceholderText="Канал LISTEN"/>
                        <CheckBox Content="Авто-переподключение" IsChecked="{Binding AutoReconnect}" Foreground="#e6eaf5"/>
                        <Button Content="Старт" Command="{Binding StartCommand}"/>
                        <Button Content="Стоп" Command="{Binding StopCommand}"/>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="#9aa3b5" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding Entries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="0 0 0 6" Background="#11131a" BorderBrush="#2c3345" BorderThickness="1" CornerRadius="6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Timestamp}" Foreground="#9aa3b5"/>
                                        <TextBlock Text="{Binding Headline}" Foreground="#e6eaf5"/>
                                        <TextBlock Text="{Binding Detail}" Foreground="#9aa3b5" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
